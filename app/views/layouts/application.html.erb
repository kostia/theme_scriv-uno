<!DOCTYPE html>
<html>
<head>

  <meta charset="UTF-8" />
  <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge" /><![endif]-->
  <title>ScrivUno - <%= strip_tags(@obj.title) %> </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=0, minimal-ui">

  <%= render 'seo_page_extender/meta_data' %>
  <%= render 'seo_page_extender/twitter_cards' %>
  <%= render 'seo_page_extender/open_graph' %>
  <%= render 'seo_page_extender/canonical_link' %>

  <%#= render 'seo_page_extender/google_analytics', key: 'your-googleAnalytics-key' %>

  <link rel="apple-touch-icon-precomposed" href="<%= asset_path('apple-touch-icon-precomposed') %>">
  <link rel="shortcut icon" href="<%= asset_path('favicon.ico') %>">

  <!-- stylesheets -->
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link rel="stylesheet" href="http://blueimp.github.io/Gallery/css/blueimp-gallery.min.css">

  <!-- javascript -->
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= scrivito_head_tags %>
  <%= javascript_include_tag('//maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places') %>

  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Favicons -->
  <link rel="apple-touch-icon-precomposed" href="/apple-touch-icon-precomposed.png">
  <link rel="icon" href="<%= asset_path('favicon.ico') %>">

</head>
<body>
  <div>
    <a href="#content" class="sr-only sr-only-focusable">Skip to main content</a>
    <header role="banner" id="top" class="navbav">
      <div class="container">
        <%= render partial: 'shared/header' %>
        <%= render partial: 'shared/nav' %>
      </div>
    </header>
  </div>

  <%= yield %>

  <%= render 'shared/footer' %>
  <%= render 'shared/flap' %>

<% if scrivito_user %>
  <%= javascript_include_tag 'editing' %>
  <%= stylesheet_link_tag 'editing' %>
<% end %>
<%= scrivito_body_tags %>
</body>
</html>
